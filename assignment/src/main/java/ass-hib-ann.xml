<?xml version="1.0" encoding="UTF-8"?>
<p:beans default-autowire="byType" xmlns:p="http://www.springframework.org/schema/beans" 
xmlns:tx="http://www.springframework.org/schema/tx"
xmlns:ctx="http://www.springframework.org/schema/context"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://www.springframework.org/schema/tx spring-tx-3.2.xsd http://www.springframework.org/schema/context spring-context-3.2.xsd http://www.springframework.org/schema/beans spring-beans-3.2.xsd ">
	
<!-- 	<ctx:component-scan base-package="spring.tx"></ctx:component-scan>
 -->	
 	<p:bean class="assignment.services.CustomerServiceImpl"></p:bean>
 	<p:bean class="assignment.services.InventoryServiceImpl"></p:bean>
 	<p:bean class="assignment.services.OrderServiceImpl"></p:bean>
 	<p:bean class="assignment.dao.CustomerDAOImpl"></p:bean>
 	<p:bean class="assignment.dao.InventoryDAOImpl"></p:bean>
 	<p:bean class="assignment.dao.LiveItemDAOImpl"></p:bean>
 	<p:bean class="assignment.dao.OrderDAOImpl"></p:bean>
 	
 	<p:bean autowire="no" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
 		<p:property name="annotatedClasses">
 			<p:list>
 				<p:value>assignment.classes.Customer</p:value>
 				<p:value>assignment.classes.Item</p:value>
 				<p:value>assignment.classes.OrderEn</p:value>
 				<p:value>assignment.classes.LiveItem</p:value>
 			</p:list>
 		</p:property>
 		<p:property name="dataSource" ref="ds"></p:property>
 	</p:bean>
 	
 	<p:bean id="tm" class="org.springframework.orm.hibernate3.HibernateTransactionManager"></p:bean>
 	
	<tx:annotation-driven transaction-manager="tm"/>
	
	<p:import resource="classpath:jdbc-ass.xml"/>
	
</p:beans>

